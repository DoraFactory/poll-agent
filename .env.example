GOOGLE_API_KEY=your-gemini-or-vertex-api-key
XAI_API_KEY=your-grok-api-key
# Optional: comma separated X handles (without @) to focus search on
X_HANDLES=elonmusk,googledeepmind
POLL_INTERVAL_SECONDS=1800
# Whether to include trending topics/news from X/Twitter platform (true/false, default: true)
# When enabled, will search X's trending section and viral posts in addition to specified handles
# Only searches X/Twitter platform, NOT external websites
INCLUDE_TRENDING_NEWS=true

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_TOKEN=your-telegram-bot-token
# Comma separated chat IDs where poll results will be sent
# To get chat ID: add bot to group, send a message, then call:
# https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
TELEGRAM_CHAT_IDS=your-chat-id-1,your-chat-id-2


